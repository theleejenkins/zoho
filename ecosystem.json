{
  "apps": [{
    "name": "zoho",
    "script": "main.js",
    "autorestart": false,
    "watch": false,
    "env_production": {
      "NODE_ENV": "production"
    }
  }],
  "deploy": {
    "production": {
      "user": "nodejs",
      "host": "ec2-52-3-66-103.compute-1.amazonaws.com",
      "ref": "origin/master",
      "repo": "https://github.com/theleejenkins/zoho.git",
      "path": "/home/nodejs/deploy",
      "pre-deploy-local": "scp .env token.json credentials.json nodejs@ec2-52-3-66-103.compute-1.amazonaws.com:/home/nodejs/deploy/current",
      "post-deploy": "yarn && pm2 startOrRestart ecosystem.json --env production"
    }
  }
}